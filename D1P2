// https://leetcode.com/problems/find-pivot-index/

class Solution {
public:
    int pivotIndex(vector<int>& nums) {
        int sum=0;
        for(int i=0;i<nums.size();i++)
            sum+=nums[i];
        int s=0;
        for(int j=0;j<nums.size();j++){
            sum=sum-nums[j];
            if(sum==s){
                return j;
            }
            s=s+nums[j];
        }
        return -1;
    }
};
